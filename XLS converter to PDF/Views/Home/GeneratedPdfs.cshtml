@model XLS_converter_to_PDF.ViewModel.GeneratedPDF
@{
    ViewData["Title"] = "GeneratedPdfs";
}

<h1 class="my-4">GeneratedPdfs</h1>

<div class="form-group">
    <div class="col-md-10">
        <p>You upload: @Model.Count Pdfs</p>
        <p>Them size: @Model.Size</p>
    </div>
</div>
<div class="section">
    <h2 class="my-4">Download converted PDFs</h2>
    <div class="row justify-content-center align-items-center">
        <div class="col-12">
            @foreach (var name in Model.FileNamePDFs)
            {
                <a class="d-block text-decoration-none" href="~/PDFFiles/@name" download>Download: @name</a>
            }
        </div>
    </div>
</div>
